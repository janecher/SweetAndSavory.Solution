@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Savory

<span class="links">@Html.ActionLink("Home", "Index", "Home")</span>
<span class="links">@Html.ActionLink("Savory list", "Index")</span>
<hr />
<h3>Edit savory:</h3>
<h3 class="user-name">@Html.DisplayFor(model => model.Name)</h3>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.SavoryId)
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new {@class = "form-control", @required  = "required"})
  </div>
  <div class="form-group"> 
    @Html.Label("Select sweet")
    @Html.DropDownList("SweetId")
  </div>
  <input type="submit" value="Edit" class="btn" />
}